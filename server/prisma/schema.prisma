generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id               String      @id @default(auto()) @map("_id") @db.ObjectId
  name             String?
  email            String      @unique
  image            String?
  bookedVisits     Json[]
  favResidenciesID String[]    @db.ObjectId
  ownedResidencies Residency[] @relation("Owner")
}

model Residency {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  price       Int
  address     String
  city        String
  country     String
  image       String
  status      String?
  facilities  Json

  // ðŸ”½ YAHAN CHANGE HUA HAI
  userEmail   String?          // OPTIONAL
  owner       User? @relation("Owner", fields: [userEmail], references: [email])

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique(fields: [address])
}
model Booking {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  email       String
  phone       String
  visitDate   DateTime
  residencyId String   @db.ObjectId   // ðŸ”¥ LINK
  createdAt   DateTime @default(now())
}
